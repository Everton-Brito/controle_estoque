@model List<SistemaEstoque.Mvc.Models.MercadoriasConsultaModel>
@{
    ViewData["Title"] = "Consulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Consulta de Mercadorias</h5>
Relação de Mercadorias
<hr/>
<a href="/Mercadorias/Cadastro" class="btn btn-primary">Adicionar Mercadoria</a>
<hr/>
<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>Nome da Mercadoria</th>
            <th>Registro</th>
            <th>Fabricante</th>
            <th>Tipo</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
            <td>@item.Nome</td>
            <td>@item.Registro</td>
            <td>@item.Fabricante</td>
            <td>@item.Tipo</td>
            <td>@item.Descricao</td>
            <td>
                <a href="/Mercadorias/Edicao/@item.IdMercadoria" class="btn btn-primary btn-sm">Editar</a>

                <a href="/Mercadorias/Delete/@item.IdMercadoria" class="btn btn-danger btn-sm">Excluir</a>
            </td>
        </tr>
        }
        
    </tbody>
</table>

